<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Source -->
    <route url="/V1/import/sources" method="GET">
        <service class="Magento\AsynchronousImportApi\Api\GetSourceListInterface" method="execute"/>
        <resources>
            <resource ref="Magento_AsynchronousImportApi::source"/>
        </resources>
    </route>
    <!-- Import -->
    <route url="/V1/imports" method="POST">
        <service class="Magento\AsynchronousImportApi\Api\StartImportInterface" method="execute"/>
        <resources>
            <resource ref="Magento_AsynchronousImportApi::import"/>
        </resources>
    </route>
</routes>
